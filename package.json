{
	"name": "@grazulex/shipmark",
	"version": "0.4.0",
	"description": "A beautiful CLI for managing Git releases, changelogs, and versioning",
	"type": "module",
	"main": "dist/cli.js",
	"bin": {
		"shipmark": "./dist/cli.js"
	},
	"files": ["dist", "README.md", "LICENSE", "CHANGELOG.md"],
	"scripts": {
		"dev": "tsx src/cli.ts",
		"build": "tsc && node scripts/fix-imports.mjs",
		"check": "biome check .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"test": "vitest",
		"test:run": "vitest run",
		"prepublishOnly": "npm run check && npm run build",
		"install:global": "npm run build && npm link",
		"uninstall:global": "npm unlink -g @grazulex/shipmark"
	},
	"keywords": ["git", "release", "changelog", "version", "semver", "cli", "tag"],
	"author": "Grazulex",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/grazulex/shipmark.git"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"boxen": "^8.0.1",
		"chalk": "^5.3.0",
		"cli-table3": "^0.6.5",
		"commander": "^12.1.0",
		"inquirer": "^12.2.0",
		"ora": "^8.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^4.0.7"
	}
}
